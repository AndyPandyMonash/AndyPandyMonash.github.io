{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "title": "University Overall Score vs Teaching Score",
  "data": {
    "url": "https://raw.githubusercontent.com/AndyPandyMonash/FIT3179/main/World%20University%20Rankings%202023.csv"
  },
  "params": [
    {
      "name": "Cohort_Size_Above",
      "value": 100000,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000,
        "step": 5000,
        "name": "Cohort Size"
      }
    }
  ],
  "transform": [
    { "filter": "datum['OverAll Score'] > 0" },
    { "filter": "datum['Teaching Score'] > 0" },
    { "filter": "datum['No of student'] < Cohort_Size_Above" }
  ],
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "Teaching Score",
          "type": "quantitative",
          "title": "Teaching Score",
          "axis": { "tickCount": 7 },
          "scale": { "domain": [20, 100] }
        },
        "y": {
          "field": "OverAll Score",
          "type": "quantitative",
          "title": "Overall Score",
          "axis": { "tickCount": 7 },
          "scale": { "domain": [20, 100] }
        },
        "size": {
          "field": "No of student",
          "type": "quantitative",
          "title": "Cohort Size"
        },
        "color": {
          "field": "Location",
          "type": "nominal"
        },
        "opacity": { "value": 0.8 },
        "tooltip": [
          { "field": "Name of University", "type": "nominal" },
          {
            "field": "OverAll Score",
            "type": "quantitative",
            "title": "Overall Score"
          },
          { "field": "Teaching Score", "type": "quantitative" },
          {
            "field": "No of student",
            "type": "quantitative",
            "title": "Cohort Size"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -10,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "field": "Teaching Score",
          "type": "quantitative"
        },
        "y": {
          "field": "OverAll Score",
          "type": "quantitative"
        },
        "text": {
          "field": "Name of University",
          "type": "nominal"
        },
        "opacity": {
          "condition": {
            "test": "datum['Name of University'] == 'University of Oxford' || datum['Name of University'] == 'Monash University'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
